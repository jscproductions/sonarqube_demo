pipeline {
  agent { label 'droplet' }
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  stages {
    stage('Scan') {
      steps {
        withSonarQubeEnv(installationName: 'sonarqubedroplet') { 
          sh './mvnw clean org.sonarsource.scanner.maven:sonar-maven-plugin:sonar:sonar'
        }
      }
    }
  }
}
